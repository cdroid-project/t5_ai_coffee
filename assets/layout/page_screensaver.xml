<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1920dp"
    android:layout_height="440dp"
    android:background="#FF000000">

    <RelativeLayout
        android:id="@+id/screensaver_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yin_larger"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/weather_img"
                android:layout_marginLeft="40dp">

                <TimeTextView
                    style="@style/Bebas_Regular_Text"
                    android:id="@+id/time_text"
                    android:text="14:31"
                    android:textColor="@color/white"
                    android:textSize="100dp"
                    android:autoStart="false"
                    android:midWidth="30dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/date_text"
                    android:layout_marginTop="30dp"
                    android:text="2024-11-21 星期四"
                    android:textSize="26dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>