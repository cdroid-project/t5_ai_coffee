<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="1920dp"
    android:layout_height="440dp"
    android:background="#990F0F0F">

    <RelativeLayout
        android:layout_width="880dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pop_normal_bg_r24">

        <RelativeLayout
            android:layout_width="644dp"
            android:layout_height="match_parent">

            <TextView
                style="@style/Harmony_Regular_Text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="磨豆模式"
                android:textSize="26dp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="90dp">

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:id="@+id/pop_bean_weight_tv"
                    android:layout_width="170dp"
                    android:layout_height="74dp"
                    android:layout_marginRight="50dp"
                    android:text="称重模式"
                    android:textSize="30dp"
                    android:textColor="@color/text_select_pop_bean"
                    android:background="@drawable/bg_r37_set_bean_stroke"/>

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:id="@+id/pop_bean_time_tv"
                    android:layout_width="170dp"
                    android:layout_height="74dp"
                    android:text="计时模式"
                    android:textSize="30dp"
                    android:textColor="@color/text_select_pop_bean"
                    android:background="@drawable/bg_r37_set_bean_stroke"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp">

            <TextView
                style="@style/Harmony_Medium_Text"
                android:id="@+id/pop_enter"
                android:layout_width="166dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:textSize="26sp"
                android:text="确定"
                android:background="@drawable/btn_r30_brown_gradient"/>

            <TextView
                style="@style/Harmony_Medium_Text"
                android:id="@+id/pop_cancel"
                android:layout_width="166dp"
                android:layout_height="60dp"
                android:layout_below="@id/pop_enter"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:textSize="26sp"
                android:text="取消"
                android:background="@drawable/btn_r30_brown_gradient_alpha"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>