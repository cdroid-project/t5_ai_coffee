<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_left"
    android:layout_width="110dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF000000"
    tools:showIn="@layout/page_home">

    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:gravity="center"
        android:background="#FF000000">

        <ImageView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yin"/>

        <TextView
            style="@style/Harmony_Regular_Text"
            android:id="@+id/week_text"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/weather"
            android:layout_alignBottom="@id/weather"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:text="周一"
            android:textSize="14dp"
            android:textColor="#7FFFFFFF" />
        <TimeTextView
            style="@style/Bebas_Regular_Text"
            android:id="@+id/time_text"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather"
            android:text="14:31"
            android:textColor="@color/white"
            android:textSize="29dp"
            android:autoStart="false"
            android:midWidth="12dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/icon_wifi"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/time_layout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/select_wifi"/>

    <ImageView
        android:id="@+id/icon_wash"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/icon_wifi"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/icon_wash_select"/>

    <ImageView
        android:id="@+id/icon_setup"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/icon_wash"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_setup"/>


</RelativeLayout>