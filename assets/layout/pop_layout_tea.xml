<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1920dp"
    android:layout_height="440dp"
    android:background="#990F0F0F">

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/> -->

    <RelativeLayout
        android:id="@+id/pop_group"
        android:layout_width="1820dp"
        android:layout_height="370dp"
        android:layout_centerInParent="true">

        <NumberPicker
            android:id="@+id/pop_picker"
            android:layout_width="220dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:wrapSelectorWheel="false"
            android:internalLayout="@layout/numpicker_ver_pop_layout"
            android:updateInputTextInFling="false"
            android:itemBackground="@drawable/bg_r27_pop_grey"
            android:textSize="18dp"
            android:selectedTextColor="#FF000000"
            android:textColor="#FF9B9B9B"
            android:textColor2="#009B9B9B"
            android:min="0"
            android:max="5"
            android:wheelItemCount="5"
            android:background="#00FFFFFF"/>

        <RelativeLayout
            android:layout_width="1490dp"
            android:layout_height="330dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pop_picker"
            android:background="@drawable/pop_bg_r24"
            android:layout_marginLeft="20dp">

            <RelativeLayout
                android:id="@+id/pop_tips_group"
                android:layout_width="400dp"
                android:layout_height="match_parent">

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_tips_title_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="10dp"
                    android:text="萃取建议"
                    android:textColor="@color/white"
                    android:textSize="24dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_tips_powder_title_tv"
                    android:layout_below="@id/pop_tips_title_tv"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="45dp"
                    android:text="克重"
                    android:textColor="@color/white"
                    android:textSize="24dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_tips_num_title_tv"
                    android:layout_below="@id/pop_tips_title_tv"
                    android:layout_toRightOf="@id/pop_tips_powder_title_tv"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:text="冲泡次数"
                    android:textColor="@color/white"
                    android:textSize="24dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_tips_pressure_title_tv"
                    android:layout_below="@id/pop_tips_title_tv"
                    android:layout_toRightOf="@id/pop_tips_num_title_tv"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:text="冲泡压力"
                    android:textColor="@color/white"
                    android:textSize="24dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_tips_powder_tv"
                    android:layout_below="@id/pop_tips_powder_title_tv"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:text="标准3g"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_tips_powder_max_tv"
                    android:layout_below="@id/pop_tips_powder_tv"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:text="最高5g"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_tips_wash_times_tv"
                    android:layout_width="100dp"
                    android:layout_below="@id/pop_tips_num_title_tv"
                    android:layout_toRightOf="@id/pop_tips_powder_title_tv"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="40dp"
                    android:text="1-3次"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_tips_pressure_tv"
                    android:layout_width="100dp"
                    android:layout_below="@id/pop_tips_pressure_title_tv"
                    android:layout_toRightOf="@id/pop_tips_num_title_tv"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="40dp"
                    android:text="3bar"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="35dp"
                    android:gravity="left"
                    android:lineSpacingExtra="10dp"
                    android:text="注：原叶、茶粉、茶包均可萃取，茶叶不适合放到本机研磨仓研磨"
                    android:textColor="#99FFFFFF"
                    android:textSize="18dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pic_pop_line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="860dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/pop_tips_group"
                android:splitMotionEvents="true">

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_title_step_tv"
                    android:layout_marginTop="28dp"
                    android:layout_marginLeft="95dp"
                    android:text="步骤"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_title_water_tv"
                    android:layout_toRightOf="@id/pop_title_step_tv"
                    android:layout_marginTop="28dp"
                    android:layout_marginLeft="145dp"
                    android:text="注水量"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_title_rateflow_tv"
                    android:layout_marginTop="28dp"
                    android:layout_toRightOf="@id/pop_title_water_tv"
                    android:layout_marginLeft="135dp"
                    android:text="流速"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_title_time_tv"
                    android:layout_marginTop="28dp"
                    android:layout_toRightOf="@id/pop_title_rateflow_tv"
                    android:layout_marginLeft="135dp"
                    android:text="中断时间"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <NumberPicker
                    android:id="@+id/pop_step_picker"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/pop_title_step_tv"
                    android:layout_marginLeft="40dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_tea_step_pop_layout"
                    android:updateInputTextInFling="false"
                    android:itemBackground="@drawable/bg_r27_pop_grey_tea"
                    android:textSize="18dp"
                    android:selectedTextColor="#FF000000"
                    android:textColor="#FF9B9B9B"
                    android:min="0"
                    android:max="3"
                    android:wheelItemCount="5"
                    android:background="#00FFFFFF"/>

                <NumberPicker
                    android:id="@+id/pop_picker_water"
                    android:layout_width="70dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/pop_step_picker"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="88dp"
                    android:layout_marginBottom="30dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_bebas_layout"
                    android:updateInputTextInFling="true"
                    android:selectedTextColor="#000000"
                    android:textSize="26dp"
                    android:textColor="#19FFFFFF"
                    android:min="1"
                    android:max="60"
                    android:wheelItemCount="3"
                    android:background="#00FFFFFF"/>
                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:layout_toRightOf="@id/pop_picker_water"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="125dp"
                    android:layout_marginRight="28dp"
                    android:text="ml"
                    android:textSize="24dp"
                    android:textColor="#33FFFFFF"/>

                <NumberPicker
                    android:id="@+id/pop_picker_flowrate"
                    android:fontFamily="@font/HarmonyOS_Sans_SC_Medium"
                    android:layout_width="70dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/pop_picker_water"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="125dp"
                    android:layout_marginBottom="30dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_pop_flowrate"
                    android:updateInputTextInFling="true"
                    android:selectedTextSize="50dp"
                    android:selectedTextColor="#000000"
                    android:textSize="26dp"
                    android:textColor="#19FFFFFF"
                    android:min="1"
                    android:max="60"
                    android:wheelItemCount="3"
                    android:background="#00FFFFFF"/>

                <NumberPicker
                    android:id="@+id/pop_picker_time"
                    android:layout_width="70dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/pop_picker_flowrate"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="138dp"
                    android:layout_marginBottom="30dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_bebas_layout"
                    android:updateInputTextInFling="true"
                    android:selectedTextColor="#000000"
                    android:textSize="26dp"
                    android:textColor="#19FFFFFF"
                    android:min="1"
                    android:max="60"
                    android:wheelItemCount="3"
                    android:background="#00FFFFFF"/>
                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:layout_toRightOf="@id/pop_picker_time"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="125dp"
                    android:layout_marginRight="28dp"
                    android:text="s"
                    android:textSize="24dp"
                    android:textColor="#33FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pop_reset_group"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/pop_reset_anim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/rotate_shuaxin"/>
                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pop_reset_anim"
                    android:text="重置"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="75dp">

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:id="@+id/pop_enter"
                    android:layout_width="166dp"
                    android:layout_height="60dp"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:text="确定"
                    android:background="@drawable/btn_r30_brown_gradient"/>

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:id="@+id/pop_cancel"
                    android:layout_width="166dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/pop_enter"
                    android:layout_marginTop="30dp"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:text="取消"
                    android:background="@drawable/btn_r30_brown_gradient_alpha"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>