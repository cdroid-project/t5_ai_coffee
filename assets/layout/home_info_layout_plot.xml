<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_layout_plot"
    android:layout_width="520dp"
    android:layout_height="350dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">

        <NumberPicker
            android:id="@+id/info_plot_hor_picker"
            android:layout_width="650dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:internalLayout="@layout/numpicker_hor_layout"
            android:updateInputTextInFling="true"
            android:textSize="18dp"
            android:textColor="#414141"
            android:min="0"
            android:max="5"
            android:wheelItemCount="5"
            android:background="#00FFFFFF"/>
    </LinearLayout>

    <CYPlotView
        android:id="@+id/info_plotview"
        android:layout_width="420dp"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:paddingLeft="70dp"
        android:paddingBottom="50dp"
        android:paddingTop="20dp"
        android:paddingRight="25dp" />

    <ImageView
        android:id="@+id/info_plot_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/info_plot_edit"
        android:src="@drawable/icon_favorites_select"/>

    <ImageView
        android:id="@+id/info_plot_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="35dp"
        android:src="@mipmap/icon_edit"/>
</RelativeLayout>