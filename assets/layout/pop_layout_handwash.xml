<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1920dp"
    android:layout_height="440dp"
    android:background="#990F0F0F">

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/> -->

    <RelativeLayout
        android:id="@+id/pop_group"
        android:layout_width="1820dp"
        android:layout_height="370dp"
        android:layout_centerInParent="true">

        <NumberPicker
            android:id="@+id/pop_picker"
            android:layout_width="220dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:wrapSelectorWheel="false"
            android:internalLayout="@layout/numpicker_ver_pop_layout"
            android:itemBackground="@drawable/bg_r27_pop_grey"
            android:updateInputTextInFling="false"
            android:textSize="18dp"
            android:selectedTextColor="#FF000000"
            android:textColor="#FF9B9B9B"
            android:textColor2="#009B9B9B"
            android:min="0"
            android:max="5"
            android:wheelItemCount="5"
            android:background="#00FFFFFF"/>

        <RelativeLayout
            android:layout_width="1290dp"
            android:layout_height="330dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pop_picker"
            android:background="@drawable/pop_bg_r24"
            android:layout_marginLeft="60dp">

            <RelativeLayout
                android:id="@+id/pop_step_group"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_width="135dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:text="萃取步骤"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"/>

                <RelativeLayout
                    android:id="@+id/pop_step_group1"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="94dp"
                    android:layout_marginLeft="35dp">

                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_step_0"
                        android:layout_width="135dp"
                        android:layout_height="42dp"
                        android:gravity="left|center_vertical"
                        android:drawableLeft="@drawable/icon_form_heating_pop_select"
                        android:drawablePadding="5dp"
                        android:paddingLeft="22dp"
                        android:text="闷蒸"
                        android:textSize="24dp"
                        android:textColor="@color/text_select_pop_step_handwash"
                        android:background="@drawable/btn_bg_r21_brown_select"/>

                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_step_1"
                        android:layout_below="@id/pop_step_0"
                        android:layout_marginTop="7dp"
                        android:layout_width="135dp"
                        android:layout_height="42dp"
                        android:gravity="left|center_vertical"
                        android:drawableLeft="@drawable/icon_form_water_pop_select"
                        android:drawablePadding="5dp"
                        android:paddingLeft="22dp"
                        android:visibility="visible"
                        android:text="注水1"
                        android:textSize="24dp"
                        android:textColor="@color/text_select_pop_step_handwash"
                        android:background="@drawable/btn_bg_r21_brown_select"/>
                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_step_2"
                        android:layout_below="@id/pop_step_1"
                        android:layout_marginTop="7dp"
                        android:layout_width="135dp"
                        android:layout_height="42dp"
                        android:gravity="center_vertical|left"
                        android:drawableLeft="@drawable/icon_form_water_pop_select"
                        android:drawablePadding="5dp"
                        android:paddingLeft="22dp"
                        android:visibility="visible"
                        android:text="注水2"
                        android:textSize="24dp"
                        android:textColor="@color/text_select_pop_step_handwash"
                        android:background="@drawable/btn_bg_r21_brown_select"/>
                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_step_3"
                        android:layout_below="@id/pop_step_2"
                        android:layout_marginTop="7dp"
                        android:layout_width="135dp"
                        android:layout_height="42dp"
                        android:gravity="center_vertical|left"
                        android:drawableLeft="@drawable/icon_form_water_pop_select"
                        android:drawablePadding="5dp"
                        android:paddingLeft="22dp"
                        android:visibility="visible"
                        android:text="注水3"
                        android:textSize="24dp"
                        android:textColor="@color/text_select_pop_step_handwash"
                        android:background="@drawable/btn_bg_r21_brown_select"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/pop_step_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pop_step_group1"
                    android:src="@drawable/icon_form_add_img"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/pop_step_delete"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_toRightOf="@id/pop_step_group1"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/icon_step_delete"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/pop_step_group"
                android:layout_marginLeft="45dp"
                android:splitMotionEvents="true">

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:id="@+id/pop_water_title"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:text="注水量"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/pop_water_title"
                    android:layout_marginLeft="165dp"
                    android:text="流速"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="中断时间"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <NumberPicker
                    android:id="@+id/pop_picker_water"
                    android:layout_width="80dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_bebas_layout"
                    android:updateInputTextInFling="true"
                    android:selectedTextColor="#000000"
                    android:textSize="26dp"
                    android:textColor="#19FFFFFF"
                    android:min="0"
                    android:max="19"
                    android:wheelItemCount="3"
                    android:background="#00FFFFFF"/>
                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:layout_toRightOf="@id/pop_picker_water"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="125dp"
                    android:text="ml"
                    android:textSize="24dp"
                    android:textColor="#33FFFFFF"/>

                <NumberPicker
                    android:id="@+id/pop_picker_flowrate"
                    android:fontFamily="@font/HarmonyOS_Sans_SC_Medium"
                    android:layout_width="70dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/pop_picker_water"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="155dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_pop_flowrate"
                    android:updateInputTextInFling="true"
                    android:selectedTextSize="50dp"
                    android:selectedTextColor="#000000"
                    android:textSize="26dp"
                    android:textColor="#19FFFFFF"
                    android:min="0"
                    android:max="19"
                    android:wheelItemCount="3"
                    android:background="#00FFFFFF"/>

                <NumberPicker
                    android:id="@+id/pop_picker_time"
                    android:layout_width="70dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="30dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_bebas_layout"
                    android:updateInputTextInFling="true"
                    android:selectedTextColor="#000000"
                    android:textSize="26dp"
                    android:textColor="#19FFFFFF"
                    android:min="1"
                    android:max="60"
                    android:wheelItemCount="3"
                    android:background="#00FFFFFF"/>
                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="125dp"
                    android:layout_marginRight="25dp"
                    android:text="s"
                    android:textSize="24dp"
                    android:textColor="#33FFFFFF"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pop_reset_group"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/pop_reset_anim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/rotate_shuaxin"/>
                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pop_reset_anim"
                    android:text="重置"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="75dp">

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:id="@+id/pop_enter"
                    android:layout_width="166dp"
                    android:layout_height="60dp"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:text="确定"
                    android:background="@drawable/btn_r30_brown_gradient"/>

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:id="@+id/pop_cancel"
                    android:layout_width="166dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/pop_enter"
                    android:layout_marginTop="30dp"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:text="取消"
                    android:background="@drawable/btn_r30_brown_gradient_alpha"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>