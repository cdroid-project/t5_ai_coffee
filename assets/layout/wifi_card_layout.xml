<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/Harmony_Regular_Text"
        android:id="@+id/wifi_list_title_tv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="55dp"
        android:text="网络"
        android:textSize="22dp"
        android:textColor="#7FFFFFFF"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/bg_wifi_pressed">

        <ImageView
            android:id="@+id/wifi_hook_img"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_wifi_hook"
            android:scaleType="center"
            android:layout_centerVertical="true"/>

        <TextView
            style="@style/Harmony_Regular_Text"
            android:id="@+id/wifi_name_tv"
            android:layout_width="230dp"
            android:layout_toRightOf="@id/wifi_hook_img"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="CDROID"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/wifi_lock_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/wifi_signal_img"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/select_wifi_lock"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/wifi_signal_img"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:src="@drawable/select_wifi_setting"
            android:scaleType="centerInside"/>
    </RelativeLayout>

</LinearLayout>