<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1920dp"
    android:layout_height="440dp"
    android:background="#990F0F0F">

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/> -->

    <RelativeLayout
        android:id="@+id/pop_group"
        android:layout_width="1820dp"
        android:layout_height="370dp"
        android:layout_centerInParent="true">

        <NumberPicker
            android:id="@+id/pop_picker"
            android:layout_width="220dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:wrapSelectorWheel="false"
            android:internalLayout="@layout/numpicker_ver_pop_layout"
            android:updateInputTextInFling="false"
            android:itemBackground="@drawable/bg_r27_pop_grey"
            android:textSize="18dp"
            android:selectedTextColor="#FF000000"
            android:textColor="#FF9B9B9B"
            android:textColor2="#009B9B9B"
            android:min="0"
            android:max="5"
            android:wheelItemCount="5"
            android:background="#00FFFFFF"/>

        <RelativeLayout
            android:layout_width="1490dp"
            android:layout_height="330dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pop_picker"
            android:background="@drawable/pop_bg_r24"
            android:layout_marginLeft="15dp">

            <CYPlotView
                android:id="@+id/pop_plotview"
                android:layout_width="450dp"
                android:layout_height="match_parent"
                android:paddingLeft="70dp"
                android:paddingBottom="50dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp" />

            <RelativeLayout
                android:id="@+id/pop_step_group"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/pop_plotview"
                android:layout_marginLeft="50dp">

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="28dp"
                    android:text="萃取阶段"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"/>

                <RelativeLayout
                    android:id="@+id/pop_step_group1"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp">

                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_extraction_step1"
                        android:layout_width="210dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:text="④ 3bar-6s"
                        android:textColor="@color/text_select_pop_step"
                        android:textSize="26dp"
                        android:background="@drawable/btn_bg_r27_brown_select"/>
                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_extraction_step2"
                        android:layout_below="@id/pop_extraction_step1"
                        android:layout_width="210dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:text="④ 3bar-6s"
                        android:textColor="@color/text_select_pop_step"
                        android:textSize="26dp"
                        android:background="@drawable/btn_bg_r27_brown_select"/>
                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_extraction_step3"
                        android:layout_below="@id/pop_extraction_step2"
                        android:layout_width="210dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:text="④ 3bar-6s"
                        android:textColor="@color/text_select_pop_step"
                        android:textSize="26dp"
                        android:background="@drawable/btn_bg_r27_brown_select"/>
                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_extraction_step4"
                        android:layout_below="@id/pop_extraction_step3"
                        android:layout_width="210dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:text="④ 3bar-6s"
                        android:textColor="@color/text_select_pop_step"
                        android:textSize="26dp"
                        android:background="@drawable/btn_bg_r27_brown_select"/>
                    <TextView
                        style="@style/Harmony_Regular_Text"
                        android:id="@+id/pop_extraction_step5"
                        android:layout_below="@id/pop_extraction_step4"
                        android:layout_width="210dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:text="④ 3bar-6s"
                        android:textColor="@color/text_select_pop_step"
                        android:textSize="26dp"
                        android:background="@drawable/btn_bg_r27_brown_select"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/pop_step_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pop_step_group1"
                    android:src="@drawable/icon_form_add_img"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/pop_step_delete"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@mipmap/icon_step_delete"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="345dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/pop_step_group"
                android:layout_marginLeft="30dp"
                android:splitMotionEvents="true">

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_marginTop="28dp"
                    android:layout_marginLeft="30dp"
                    android:text="萃取压力"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_marginTop="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="萃取水量"
                    android:textSize="24dp"
                    android:textColor="@color/white"/>

                <NumberPicker
                    android:id="@+id/pop_picker_pressure"
                    android:layout_width="70dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="45dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_bebas_layout"
                    android:updateInputTextInFling="true"
                    android:selectedTextColor="#000000"
                    android:textSize="26dp"
                    android:textColor="#19FFFFFF"
                    android:min="0"
                    android:max="19"
                    android:wheelItemCount="3"
                    android:background="#00FFFFFF"/>
                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:layout_toRightOf="@id/pop_picker_pressure"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="125dp"
                    android:text="bar"
                    android:textSize="24dp"
                    android:textColor="#33FFFFFF"/>

                <NumberPicker
                    android:id="@+id/pop_picker_water"
                    android:layout_width="80dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="30dp"
                    android:wrapSelectorWheel="false"
                    android:internalLayout="@layout/numpicker_ver_bebas_layout"
                    android:updateInputTextInFling="true"
                    android:selectedTextColor="#000000"
                    android:textSize="26dp"
                    android:textColor="#19FFFFFF"
                    android:min="0"
                    android:max="19"
                    android:wheelItemCount="3"
                    android:background="#00FFFFFF"/>

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="125dp"
                    android:layout_marginRight="5dp"
                    android:text="ml"
                    android:textSize="24dp"
                    android:textColor="#33FFFFFF"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pop_reset_group"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/pop_reset_anim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/rotate_shuaxin"/>
                <TextView
                    style="@style/Harmony_Regular_Text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pop_reset_anim"
                    android:text="重置"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="75dp">

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:id="@+id/pop_enter"
                    android:layout_width="166dp"
                    android:layout_height="60dp"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:text="确定"
                    android:background="@drawable/btn_r30_brown_gradient"/>

                <TextView
                    style="@style/Harmony_Medium_Text"
                    android:id="@+id/pop_cancel"
                    android:layout_width="166dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/pop_enter"
                    android:layout_marginTop="30dp"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:text="取消"
                    android:background="@drawable/btn_r30_brown_gradient_alpha"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>