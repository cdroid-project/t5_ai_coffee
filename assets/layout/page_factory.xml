<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <GridLayout
        android:id="@+id/menu"
        android:columnCount="6"
        style="@style/factory_match_parent">
        <Button
            android:id="@+id/to_serial"
            style="@style/factory_menu_btn"
            android:text="串口测试"/>
        <Button
            android:id="@+id/to_touch"
            style="@style/factory_menu_btn"
            android:text="触摸测试"/>
        <Button
            android:id="@+id/to_color"
            style="@style/factory_menu_btn"
            android:text="颜色测试"/>
        <Button
            android:id="@+id/to_wifi"
            style="@style/factory_menu_btn"
            android:text="wifi测试"/>
        <Button
            android:id="@+id/to_info"
            style="@style/factory_menu_btn"
            android:text="项目信息"/>
        <Button
            android:id="@+id/to_shutdown"
            style="@style/factory_menu_btn"
            android:text="关机按键"/>
        <Button
            android:id="@+id/exit"
            style="@style/factory_menu_btn"
            android:text="结束测试"/>
    </GridLayout>
    <RelativeLayout
        android:id="@+id/serial"
        style="@style/factory_match_parent">
        <TextView
            android:id="@+id/serial_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请将RX以及TX接口对接"
            android:textColor="#ffffff"
            android:textSize="46sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/touch"
        style="@style/factory_match_parent">
        <TouchView
            android:id="@+id/touchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    <ViewFlipper
        android:id="@+id/color"
        style="@style/factory_match_parent">
        <View
            android:id="@+id/red"
            style="@style/factory_match_parent"
            android:background="#FF0000"/>
        <View
            android:id="@+id/green"
            style="@style/factory_match_parent"
            android:background="#00FF00"/>
        <View
            android:id="@+id/blue"
            style="@style/factory_match_parent"
            android:background="#0000FF"/>
        <View
            android:id="@+id/black"
            style="@style/factory_match_parent"
            android:background="#000000"/>
        <View
            android:id="@+id/white"
            style="@style/factory_match_parent"
            android:background="#FFFFFF"/>
        <View
            android:id="@+id/gradient"
            style="@style/factory_match_parent"
            android:background="@drawable/factory_color_gradient"/>
    </ViewFlipper>
    <RelativeLayout
        android:id="@+id/wifi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="1500dp"
            android:layout_height="match_parent"
            android:background="#141414"
            android:paddingLeft="30dp"
            android:paddingVertical="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ssid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="5dp"
                    android:textSize="28dp"/>

                <TextView
                    android:id="@+id/signal_level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="5dp"
                    android:textSize="28dp"/>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/shuaxin_wifi_btn"
            style="@style/factory_menu_btn"
            android:text="刷新wifi列表"
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="85dp"
            android:layout_marginTop="80dp"/>

        <TextView
            android:id="@+id/pass_btn"
            style="@style/factory_menu_btn"
            android:text="测试通过"
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="85dp"
            android:layout_marginBottom="80dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/info"
        style="@style/factory_match_parent">
        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="项目信息"
            android:textColor="#ffffff"
            android:textSize="46sp"/>
        <!-- android:layout_width="1000dp" -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/info_title">

            <TextView
                android:id="@+id/info_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="型号：cdroid"
                android:textColor="#ffffff"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/info_uuid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_model"
                android:layout_marginTop="10dp"
                android:text="UUID：xxxxxxx"
                android:textColor="#ffffff"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/info_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_uuid"
                android:layout_marginTop="10dp"
                android:text="MAC地址：11:22:33:44:55"
                android:textColor="#ffffff"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/info_tp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_mac"
                android:layout_marginTop="10dp"
                android:text="TP版本号：20000000"
                android:textColor="#ffffff"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/info_mcu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_tp"
                android:layout_marginTop="10dp"
                android:text="MCU版本号：V1.0.0"
                android:textColor="#ffffff"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/info_cdroid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_mcu"
                android:layout_marginTop="10dp"
                android:text="框架版本号：V3.4.5"
                android:textColor="#ffffff"
                android:textSize="35sp"/>

            <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cdroid_qr_code"
                android:layout_alignParentRight="true"/> -->
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shutdown_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/shutdown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lineSpacingExtra="5dp"
            android:text="该测试完成会自动重启，是否继续？"
            android:textColor="#ffffff"
            android:textSize="46sp"/>

        <TextView
            android:id="@+id/enter_btn"
            style="@style/factory_menu_btn"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="185dp"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/cancel_btn"
            style="@style/factory_menu_btn"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="185dp"
            android:layout_marginBottom="100dp"/>
    </RelativeLayout>
</ViewFlipper>