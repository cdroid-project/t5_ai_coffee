<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <set>
            <objectAnimator
                android:propertyName="alpha"
                android:duration="500"
                android:valueTo="1.0"/>
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="500"
                android:valueTo="1.0"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="500"
                android:valueTo="1.0"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:propertyName="alpha"
                android:duration="500"
                android:valueTo="0.7"/>
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="500"
                android:valueTo="0.9"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="500"
                android:valueTo="0.9"/>
        </set>
    </item>
</selector>
